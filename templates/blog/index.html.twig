{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<div class=" grid md:grid-col-2 lg:grid-cols-3 gap-8 px-4 md:px-8 py-10 bg-gray-100 ">
   {% for post in posts %}
      <div class="bg-white shadow-lg rounded-xl overflow-hidden transition-transform hover:scale-105 duration-300">
         <!-- Content -->
         <div class="p-6 flex flex-col justify-between h-full">
            <h2 class="text-2xl font-semibold text-gray-800 mb-3 text-center truncate">
               {{ post.title }}
            </h2>
            <p class="text-gray-600 text-base mb-3 line-clamp-3 text-center">
               {{ post.content }}
            </p>
            <p class="text-gray-500 text-sm italic mb-6 text-center">
               By {{ post.author }}
            </p>
            <!-- Button -->
            <a href="/blog/{{ post.id }}" class="mt-auto mx-auto text-sm font-medium uppercase border border-gray-700 text-gray-700 py-2 px-5 rounded-lg hover:bg-gray-800 hover:text-white transition-all">
               View Post
            </a>
         </div>
      </div>
   {% else %}
      <p class="text-center text-gray-500">No blog posts available.</p>
   {% endfor %}
</div>
{% endblock %}
